# docker-compose.yml.prod (Forcing reliable HTTPS on standard ports 80 and 443)
services:
  backend:
    build:
      context: ./backend
    container_name: chess_backend
    restart: unless-stopped
    env_file:
      - .env
    environment:
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
    # CRITICAL CHANGE: Backend must NOT expose ports 80 or 443 to the host.
    # It only needs its internal 8000 port for Caddy to reverse proxy to.
    ports:
      - "8000:8000" # Only the internal port is needed publicly for the backend
    volumes:
      - ./backend:/app
    networks:
      - chess-net

  web:
    image: dunglas/frankenphp
    container_name: chess_web
    restart: unless-stopped
    tty: true
    # CRITICAL CHANGE: This bypasses Docker's internal network and binds Caddy 
    # directly to the host's 80 and 443 ports for reliable HTTPS/ACME validation.
    network_mode: host 
    
    # CRITICAL CHANGE: The 'ports' section must be DELETED when using network_mode: host
    # ports:
    #   - "80:80" 
    
    env_file:
      - .env
    environment:
      - CADDY_HOSTNAME=${CADDY_HOSTNAME:-localhost}
    volumes:
      - ./frontend:/app/public
      - ./Caddyfile.prod:/etc/frankenphp/Caddyfile
    depends_on:
      - backend
    # Keep the network defined for internal communication with the 'backend' service
    networks:
      - chess-net

networks:
  chess-net:
    driver: bridge
