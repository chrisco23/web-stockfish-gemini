services:
  backend:
    build:
      context: ./backend
    container_name: chess_backend
    restart: unless-stopped
    environment:
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
    # backend should be internal only; Caddy talks to it on 8000
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
    networks:
      - chess-net

  web:
    image: dunglas/frankenphp
    container_name: chess_web
    restart: unless-stopped
    tty: true
    ports:
      - "8080:80"
      - "443:443"
    env_file:
      - .env          # for CADDY_HOSTNAME etc. if you want
    environment:
      - CADDY_HOSTNAME=${CADDY_HOSTNAME:-localhost}
    volumes:
      - ./frontend:/app/public
      - ./Caddyfile.prod:/etc/frankenphp/Caddyfile
    depends_on:
      - backend
    networks:
      - chess-net

networks:
  chess-net:
    driver: bridge

