# docker-compose.yml.prod (Cleaned up for stable HTTP on 8080)
services:
  backend:
    build:
      context: ./backend
    container_name: chess_backend
    restart: unless-stopped
    environment:
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
    ports:
      - "8000:8000"
      - "8001:8000"
    volumes:
      - ./backend:/app
    networks:
      - chess-net

  web:
    image: dunglas/frankenphp
    container_name: chess_web
    restart: unless-stopped
    tty: true
    ports:
      - "8080:80" # <-- This is the ONLY port mapping needed for HTTP on 8080
      # - "443:443" <-- REMOVED THIS LINE
    env_file:
      - .env
    environment:
      - CADDY_HOSTNAME=${CADDY_HOSTNAME:-localhost}
    volumes:
      - ./frontend:/app/public
      - ./Caddyfile.prod:/etc/frankenphp/Caddyfile
    depends_on:
      - backend
    networks:
      - chess-net

networks:
  chess-net:
    driver: bridge
